{
  "printWidth": 100,
  "trailingComma": "all",
  "singleQuote": true,
  "importOrder": [
    "^(next)|(next/(.*))$",
    "^(react)|(react/(.*))$",
    "<THIRD_PARTY_MODULES>",
    "^@/components/(.*)$",
    "^@/types/(.*)$",
    "^@/lib/(.*)$",
    "^@/styles/(.*)$",
    "^@/svgs/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderCaseInsensitive": false,
  "plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"]
}
